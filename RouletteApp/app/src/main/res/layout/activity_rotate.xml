<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.rouletteapp.RotateActivity"
    android:orientation="vertical"
    >
    
    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484"
        android:layout_marginTop="8dp">
    
        <!--    <ImageView
            android:id="@+id/img_wheel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/roulette"/>-->
    
        <ImageView
            android:id="@+id/rpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/rpin"/>
    
        <Button
            android:id="@+id/btn_rotate"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/round_btn"
            android:text="Start"
            android:layout_gravity="center"
            />

    </FrameLayout>
    
    <LinearLayout
        android:id="@+id/line_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/frame1"
        app:layout_constraintLeft_toLeftOf="parent">
    
        <Button
            android:id="@+id/btn_back_rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="447dp"
            android:layout_weight="1"
            android:text="Back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
