<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="seveno.andorid.miniseconds.picturepuzzle.PicturePuzzleGame">
    
    
    <seveno.andorid.miniseconds.picturepuzzle.PuzzleView
        android:id="@+id/puzzleView"
        android:layout_width="368dp"
        android:layout_height="400dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/countdown_view_p"
        android:layout_width="300dp"
        android:layout_height="320dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:text="3"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="300dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <LinearLayout
        android:id="@+id/linear_pbar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        
        <ProgressBar
            android:id="@+id/bar_PuzzleGame"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:max="100"/>
    </LinearLayout>
    
</android.support.constraint.ConstraintLayout>
