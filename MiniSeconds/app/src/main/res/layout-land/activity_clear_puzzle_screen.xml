<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="seveno.android.miniseconds.PicturePuzzle.ClearPuzzleScreen"
    android:orientation="vertical"
    >
    
    
    <TextView
        android:id="@+id/txt_puz_finished"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/textview_cleared"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold"
        android:typeface="serif"/>
    
    <TextView
        android:id="@+id/txt_puz_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:typeface="serif"/>
    
    <TextView
        android:id="@+id/txt_puz_finaltime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:typeface="serif"/>
    
    <!--<TextView
        android:id="@+id/textview_errors"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:typeface="serif"/>-->
    
    <TextView
        android:id="@+id/fin_puz_score"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:typeface="serif"/>
    
    <Button
        android:id="@+id/btn_puz_next"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="btn_puzzle_next"
        android:text="@string/button_NextGame"
        android:textSize="@dimen/text_size"
        android:typeface="serif"/>

</LinearLayout>
