<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_height="match_parent"
android:layout_width="match_parent"
android:orientation="vertical"
tools:context=".StartMenu">
    
    <TextView
    android:gravity="center"
    android:layout_height="0dp"
    android:layout_weight="0.25"
    android:layout_width="match_parent"
    android:text="@string/app_name"
    android:textSize="@dimen/text_size_title"
    android:textStyle="bold"
    android:typeface="serif"/>
    
    <Button
    android:layout_height="0dp"
    android:layout_weight="0.1875"
    android:layout_width="match_parent"
    android:text="@string/button_quickplay" 
    android:textSize="@dimen/text_size"
    android:typeface="serif" 
	android:onClick="startQuickplay"/>

    <Button
    android:layout_height="0dp"
    android:layout_weight="0.1875"
    android:layout_width="match_parent" 
    android:text="@string/button_newgame" 
    android:textSize="@dimen/text_size"
    android:typeface="serif" 
	android:onClick="startPlay"/>

    <Button
	android:layout_height="0dp"
    android:layout_weight="0.1875"
    android:layout_width="match_parent"
	android:text="@string/button_highscores" 
	android:textSize="@dimen/text_size"
    android:typeface="serif" 
    android:onClick="startHighScores"/>
    
	<Button
   	android:layout_height="0dp"
   	android:layout_weight="0.1875"
    android:layout_width="match_parent"
    android:text="@string/button_help" 
    android:textSize="@dimen/text_size"
    android:typeface="serif" 
    android:onClick="startHelp"/>

</LinearLayout>