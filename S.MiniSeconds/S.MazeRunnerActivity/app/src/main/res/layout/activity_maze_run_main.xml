<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="seveno.android.mazerunneractivity.MazeRunMainActivity">
    
    <Button
        android:id="@+id/button6"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gridLayout1"
        android:layout_alignRight="@+id/linearLayout1"
        android:onClick="playPause"
        android:text="@string/pause"
        app:layout_constraintLeft_toRightOf="@+id/gridLayout1"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/gridLayout1"
        android:layout_marginBottom="8dp"/>
    
    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="190dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:columnCount="3"
        android:rowCount="2"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        
        <Button
            android:id="@+id/buttonLeft"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="left"
            android:text="@string/left"/>
        
        <Button
            android:id="@+id/buttonDown"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="down"
            android:text="@string/down"/>
        
        <Button
            android:id="@+id/buttonRight"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="right"
            android:text="@string/right"/>
        
        <Button
            android:id="@+id/buttonUp"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_gravity="left|bottom"
            android:layout_row="0"
            android:onClick="up"
            android:text="@string/up"/>
    </GridLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top">
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/battery_level"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            
            <ProgressBar
                android:id="@+id/batterybar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="0.17"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
