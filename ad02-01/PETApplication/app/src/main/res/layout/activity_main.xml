<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.petapplication.MainActivity"
    android:background="@drawable/border"
    android:orientation="vertical"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    
        <TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="선택을 시작하시겠습니까?"/>
    
        <CheckBox
            android:id="@+id/chk_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="시작함"/>

    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/line_pick_animal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">
    
        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="좋아하는 애완동물은?"/>
    
        <RadioGroup
            android:id="@+id/rgp_animal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    
            <RadioButton
                android:id="@+id/radiobtn_dog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="강아지"/>
    
            <RadioButton
                android:id="@+id/radiobtn_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="고양이"/>
    
            <RadioButton
                android:id="@+id/radiobtn_rabbit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="토끼"/>
        </RadioGroup>
    
        <ImageView
            android:id="@+id/img_animals"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/border"/>
    
        <Button
            android:id="@+id/btn_animals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="선택 완료"/>

    </LinearLayout>

</LinearLayout>
