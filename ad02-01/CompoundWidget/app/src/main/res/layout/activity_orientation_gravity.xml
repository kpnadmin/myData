<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.compoundwidget.OrientationGravityActivity"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/rgpDirection_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Direction"
        />
    
    <RadioGroup
        android:id="@+id/rgpDirection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    
        <RadioButton
            android:id="@+id/radiobtn_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="가로"/>
    
        <RadioButton
            android:id="@+id/radiobtn_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="세로"/>

    </RadioGroup>
    <TextView
        android:id="@+id/rgpGravity_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gravity"
        />
    
    <RadioGroup
        android:id="@+id/rgpGravity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    
        <RadioButton
            android:id="@+id/radiobtn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="왼쪽"/>
        
        <RadioButton
            android:id="@+id/radiobtn_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="가운데"/>
        <RadioButton
            android:id="@+id/radiobtn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="오른쪽"/>
    
    </RadioGroup>
</LinearLayout>
