<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.fileio.MainActivity">
    
    <EditText
        android:id="@+id/edit_main1"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="파일내용입력"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"/>
    
    <GridLayout
        android:id="@+id/grid1"
        android:layout_width="379dp"
        android:layout_height="363dp"
        android:columnCount="2"
        android:rowCount="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    
    
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:onClick="onClick"
            android:text="내장메모리파일쓰기"
            />
    
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="0.5"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:onClick="onClick"
            android:text="내장메모리파일읽기"
            />
    
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:onClick="onClick"
            android:text="Raw폴더파일쓰기"
            />
    
        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="0.5"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:onClick="onClick"
            android:text="Raw폴더파일읽기"
            />
    
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:onClick="onClick"
            android:text="CACHE 파일 쓰기"
            />
    
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:onClick="onClick"
            android:text="SD카드 파일 쓰기"
            />
    
        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="0.5"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:onClick="onClick"
            android:text="SD카드 파일 읽기"
            />
    
        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:onClick="onClick"
            android:text="SD카드 폴더 생성"
            />
    
        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="0.5"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:onClick="onClick"
            android:text="SD카드 폴더 삭제"
            />
    
        <Button
            android:id="@+id/btn10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="5"
            android:onClick="onClick"
            android:text="SD카드 파일 목록"
            />
    
        <TextView
            android:id="@+id/res_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </GridLayout>
</android.support.constraint.ConstraintLayout>
